@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/default.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/default.js"></script>
    <script>
        var jq = jQuery.noConflict();
        jq(document).ready(function () {
            var msg = myApp.commom.getParameterByName('msg');
            if (msg != '') {
                alert('Atenção! Erro: '+msg);
            }
        });
    </script>
</head>
<body>

    <div class="loginBox">
        @using (Html.BeginForm("GedLogin", "home", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">ACESSO</label>
            </div>
            <div class="form-group">
                <label for="inputLogin" class="col-sm-2 control-label">Usuário</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="inputLogin" placeholder="Usuário">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Senha</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="inputPassword3" placeholder="Senha">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Acesso</button>
                    <img src="~/Content/Imagens/cadeado.jpg" style="width:150px;float:right" />
                </div>

            </div>
        }
    </div>
</body>
</html>
