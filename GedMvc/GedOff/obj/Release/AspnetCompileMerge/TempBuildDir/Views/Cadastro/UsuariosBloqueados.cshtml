@model List<DEEntities.Entidade>
@{
    ViewBag.Title = "UsuariosBloqueados";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

@section script
{
    <script src="~/Scripts/usuariosbloqueados.js"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
}

<style>
    #dados {
        font-size: 16pt;
        text-align: center;
    }

        #dados span {
            background-color: silver;
        }
</style>

<div class="container">
    <div class="panel panel-primary" id="pnllista">
        <div class="panel-heading">
            <h3 class="panel-title"><span class="glyphicon glyphicon-list"></span> Usuários bloqueados</h3>
        </div>
        <div class="panel-body" style="overflow:auto">
            <table class="table table-responsive" id="tblusuarios">
                <thead>
                    <tr>
                        <th>
                            Menu
                        </th>
                        <th>
                            Id
                        </th>
                        <th>
                            Nome Usuário
                        </th>
                        <th>
                            Login
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Tipo
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="#">Recuperar</a>
                            </td>
                            <td>
                                @item.Codigo
                            </td>
                            <td>
                                @item.NmEntidade
                            </td>
                            <td>
                                @item.NmUser
                            </td>
                            <td>
                                @item.NmEmail
                            </td>
                            <td>
                                @item.Tipo.Nome
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@using (Html.BeginForm("DesbloquearUsuario", "Cadastro"))
{
    <div class="modal fade" id="pnlRecuperar">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Recuperar usuário</h4>
                </div>
                <div class="modal-body">
                    <p>Deseja recuperar este usuário?</p>
                    <div id="dados">
                        <input type="hidden" name="dadosid" id="dadosid" value=" " />  <span id="dadosnome"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>


                    <button type="submit" class="btn btn-primary">Confirmar</button>


                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}